{
  "manifest_version": 2,
  "name": "Autorole",
  "version": "0.1",
  "description": "Automatically select role",
  "icons": {
    "48": "icons/autorole-48.png"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false,
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://ou-idp.auth.osaka-u.ac.jp/idp/*"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "autorole@rioil.dev"
    }
  }
}
